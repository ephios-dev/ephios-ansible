[uwsgi]
base = /home/{{ ansible_user }}/ephios/ephios
chdir = /home/{{ ansible_user }}/ephios

http = :8000
master = true
wsgi-file = %(base)/wsgi.py
touch-reload = %(wsgi-file)
static-map = /static=%(base)/static

app = wsgi

virtualenv = {{ venv_path }}

plugin = python

uid = {{ ansible_user }}
gid = {{ ansible_user }}
